{
  "name": "release-automatic-changelog",
  "version": "1.0.3",
  "main": "index.js",
  "repository": "https://github.com/ilyaulyanov/release-automatic-changelog.git",
  "author": "Ilya Ulyanov <ilya.wt@gmail.com>",
  "license": "MIT",
  "scripts": {
    "changelog": "conventional-changelog -p angular -s -i CHANGELOG.md && git add CHANGELOG.md",
    "release": "cross-env DEBUG=conventional-github-releaser node ./release.js",
    "reset": "cross-env node ./delete.js",
    "preversion": "yarn changelog",
    "postversion": " && git push --tags && echo \"Pushed tagged version $npm_package_version!\" && yarn release"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "devDependencies": {
    "@commitlint/cli": "^8.0.0",
    "@commitlint/config-conventional": "^8.0.0",
    "conventional-changelog-cli": "^2.0.21",
    "conventional-github-releaser": "^3.1.3",
    "cross-env": "^5.2.0",
    "dotenv": "^8.0.0",
    "github-remove-all-releases": "^1.0.1",
    "husky": "^2.7.0"
  }
}
